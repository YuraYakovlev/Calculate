<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/picture</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:textColor">#4B0082</item>
        <item name="fontFamily">@font/book_italic</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="btn_style" parent="text_style">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">#191970</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>