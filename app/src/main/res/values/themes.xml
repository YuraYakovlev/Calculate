<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculate" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="text_style" parent="Theme.Calculate">
        <item name="android:textSize">@dimen/et_text_size</item>
        <item name="android:textColor">@color/day_text</item>
        <item name="fontFamily">@font/book_italic</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="btn_style" parent="text_style">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/day_button</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>